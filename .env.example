# Supabase Configuration
VITE_SUPABASE_URL=your_supabase_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# Paystack Configuration
VITE_PAYSTACK_PUBLIC_KEY=your_paystack_public_key

# Google Analytics (optional)
VITE_GA_ID=G-XXXXXXXXXX

# Terminal Africa (Shipping) - optional
VITE_TERMINAL_AFRICA_LIVE_API_KEY=your_terminal_africa_key

# Notification endpoint (recommended)
# If you have a server or serverless function that handles notifications (email/sms),
# set its URL here. This keeps API keys off the client and is the preferred production
# configuration. Example: VITE_NOTIFICATION_ENDPOINT=https://api.yoursite.com/notify
VITE_NOTIFICATION_ENDPOINT=

# Email Configuration (Resend) - if you do not use a server endpoint
VITE_RESEND_API_KEY=your_resend_api_key
VITE_EMAIL_FROM_ADDRESS=orders@solarnaija.store
VITE_EMAIL_FROM_NAME=SolarNaija

# Africa's Talking SMS - if you do not use a server endpoint
VITE_AFRICASTALKING_API_KEY=your_africastalking_api_key
VITE_AFRICASTALKING_USERNAME=sandbox
VITE_AFRICASTALKING_SENDER_ID=SolarNaija

# Admin Configuration
VITE_ADMIN_EMAIL=support@solarnaija.store

# WhatsApp Business
VITE_WHATSAPP_NUMBER=+2348169250046

# Server-side (if running the provided server in the `server/` folder)
# These should NOT be in the client .env for production. Configure them on the server instead.
SUPABASE_URL=your_supabase_url
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
PAYSTACK_SECRET=your_paystack_secret_key
RESEND_API_KEY=your_resend_api_key
AFRICASTALKING_API_KEY=your_africastalking_api_key
AFRICASTALKING_USERNAME=sandbox
AFRICASTALKING_FROM=SolarNaija